    .ab {
        display: grid;
        grid-template-columns: repeat(6, 1fr);
        grid-template-rows: repeat(8, 4vw);
        gap: 2rem;
    }

        .ab .item {
            overflow: hidden;
        }

        .ab img {
            object-fit: cover;
            height: 100%;
            width: 100%;
            transition: all 500ms ease-out;
        }

        .ab .item-1 img {
            object-fit: fill;
        }

        .ab img:hover {
            transform: scale(1.2);
        }

